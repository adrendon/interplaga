@import url(http://fonts.googleapis.com/css?family=Raleway)

body
  color #9d9d9d
  font-family 'Raleway', sans-serif
  font-size 14px
  font-weight 400
  line-height 1.4
  overflow-x hidden

ul,
li
  list-style none

a
  display inline-block
  text-decoration none
  transition all 0.5s ease

h1
  font-size 12px
  font-weight 400
  margin 0
  padding-left 2.5em



.headerBlock
  overflow hidden
  position absolute
  width 100%
  z-index 2
  &__top
    background #fff
    border-bottom 1px solid #dcdcdc
    margin auto
    max-width 1170px
    padding 0.25em 0
    &--left
      display inline-block
      vertical-align middle
      width 78%
    &--right
      display: inline-block;
      float: right;
      margin-right: 1em;
      vertical-align: middle;
      width: 11.4%;
      &Buscador
        background: #f8f8f8;
        width: 134px;
        &SearchForm
          padding-left: .5em;
          &IconSearch
            background: url("img/header/iconSearch.png") no-repeat;
            background-size: 100%;
            border: none;
            height: 10px;
            margin-right: 0.2em;
            outline: 0;
            text-indent: -9999px;
            vertical-align: middle;
            width: 11px;
          &SearchBox
            background: none;
            border: 0;
            float: right;
            font-size: 12px;
            outline: 0;
            padding: 0.3em 0;
            width: 108px;
  &__bottom
    height 147px
    margin auto
    max-width 1170px
    &--figure
      background #fff
      border-bottom solid 1px  rgba(41, 38, 4, 0.52)
      box-shadow 0px 2px 3px 0px rgba(41, 38, 4, 0.52)
      display inline-block
      max-width 218px
      padding 1.8em 0 0.1em
      position relative
      text-align center
      vertical-align top
      width 100%
      z-index 1
      &Figcaption
        background #e7d728
        bottom -23px
        box-shadow inset 0 1px 1px 0px rgba(41, 38, 4, 0.52), 0 2px 2px 0 rgba(41, 38, 4, 0.52)
        color #4d4706
        float left
        padding 0.2em 0
        position absolute
        text-align center
        width 218px
        z-index 2
        &:before
          background #e7d728
          border-radius 50%
          bottom -15px
          content ""
          cursor pointer
          height 36px
          left 0
          margin auto
          position absolute
          right 0
          text-align center
          width 36px
          z-index -1
        &:after
          border-color transparent transparent #000000 transparent
          border-style solid
          border-width 0 6px 8px 6px
          bottom -8px
          content ""
          cursor pointer
          height 0
          left 0
          margin auto
          position absolute
          right 0
          width 0
          z-index 3
        a
          color #4d4706

.navBlock
  background #fff
  border-bottom 1px solid #dcdcdc
  display inline-block
  margin-left -3px
  max-width 951px
  vertical-align middle
  width 100%
  &__main
    margin 0
    padding 0
    &Item
      display inline-block
      height 68px
      padding 1.5em 0.5em
      position relative
      vertical-align middle
      width 105px
      cursor pointer
      text-align center
      &:nth-child(1)
        width 162px
        padding-left 1.5em
      &:nth-child(2)
        width 170px
      &:nth-child(3)
        width 180px
      &:nth-child(4)
        width 140px
      &:nth-child(5)
        width 130px
      &:before
        background #dbcb19
        content ""
        height 3px
        left 0
        position absolute
        top 0
        transition top 0.3s
        width 100%
        opacity 0
      &:hover
        &:before
          opacity 1
          top 97%
    &--link
      text-align left
      text-transform uppercase
      font-weight bold
      color #0b2973
      line-height 14px
      font-size 12px

.slider__block
  margin auto
  max-width 1100px
  position relative
  z-index 1
  &:after
    bottom 9px
    box-shadow 0 10px 6px #000
    content ""
    height 2px
    left 0
    margin auto
    position absolute
    right 0
    width 98%
    z-index 1
  &--figure
    position relative
    &Figcaption
      background #fff
      bottom 10%
      box-shadow 0px 2px 3px 0px rgba(41, 38, 4, 0.52)
      color #00247d
      cursor: pointer;
      max-width 298px
      position absolute
      right 5%
      text-align center
      text-transform uppercase
      &:hover:before
        top 45%
      &:before
        border-color transparent #fff transparent transparent
        border-style solid
        border-width 20px 20px 20px 0
        content ""
        height: 0
        left -20px
        position absolute
        top 35px
        transition: top 0.3s;
        width 0
      &Content
        display: table-cell;
        height: 160px;
        vertical-align: middle;
        &Center
          width 80%
          margin auto
          &Small
            font-size 18px
            font-weight bold
          &Strong
            font-size 24px
            position relative
            &:after
              border-bottom solid 1px #dbcb19
              bottom -5px
              content ""
              left -20%
              position absolute
              right 0
              width 140%
          &Span
            color #222
            display block
            font-size 14px
            margin-top 12px
            text-transform none

.section__home
  background #fff
  margin -3em auto auto
  max-width 1170px
  padding-top 4em
  position relative
  z-index 0
  &--nav
    max-width 1100px
    margin auto
  &--breacrumbs
    display inline-block
    vertical-align middle
    width 78%
    margin-left 3px
  &--redes
    display inline-block
    text-align right
    vertical-align middle
    width 21%

.block__body
  display inline-block
  line-height 18px
  margin-left 2.5em
  max-width: 585px;
  vertical-align top
  width: 50%;
  &--title
    color #3859a2
    font-size 30px
    font-weight bold
    line-height 30px
    margin 0
    margin-bottom 0.6em
  &--text
    color #12317f

.block__body--textDestacado
  border-bottom solid 1px #aaa6a6
  border-top solid 1px #aaa6a6
  color #12317f
  padding 0.1em 0

.block__body--texts
  color #6a6a6a

#tabs
  list-style none
  margin 0
  overflow hidden
  padding 0
  width 100%
  li
    float left
    margin 0 .5em 0 0
  a
    background #ddd
    background-image linear-gradient(to bottom, #fff, #ddd)
    border-radius 5px 0 0 0
    box-shadow 0 2px 2px rgba(0,0,0,.4)
    color #444
    float left
    padding .7em 3.5em
    position relative
    text-decoration none
    text-shadow 0 1px 0 rgba(255,255,255,.8)
    &:focus
      outline 0
    &::after
      background #ddd
      background-image linear-gradient(to bottom, #fff, #ddd)
      border-radius 0 5px 0 0
      bottom 0
      box-shadow 2px 2px 2px rgba(0,0,0,.4)
      content ''
      position absolute
      right -.5em
      top 0
      transform skew(10deg)
      width 1em
      z-index 1

.tabs
  margin 0
  padding 0
  li
    list-style none
    display inline
  a
    color #00247d
    display inline-block;
    font-weight bold
    padding 0.5em
    text-decoration none
    &:last-child
      padding-left 0.59374em
    &.active
      background linear-gradient(to bottom, #dbdbdb 0%,#ffffff 100%)

.tree_category
  background #dbcb19
  display inline-block
  max-width 465px
  vertical-align top
  width 41%
  &--tab
    color #4a4a4a
    line-height 18px
    p
      padding 0.5em 2.5em
    li
      position relative
      padding-left 1.5em
      &:before
        content ""
        position absolute
        height 10px
        background #f8ec6b
        width 10px
        left 0
        top 4px

.footer
  background #f2f2f3
  box-shadow inset 0px 0px 10px rgba(0,0,0,0.14)
  margin auto
  position relative
  width 100%
  ul
    margin 0
    padding 0
  a
    color #000000
  p
    margin 0
    padding 0
  &__block
    color #565656
    font-size 12px
    margin auto
    max-width 1170px
    padding 4em 0 2em 0
    &--left,
    &--center,
    &--right
      display inline-block
      vertical-align top
    &--left,
    &--center
      width 30%
    &--left
      margin-right 55px
    &--center
      vertical-align top
    ul
      li
        width 35%
        display inline-block
        vertical-align top
    &--right
      width 25%

.powered
  margin -16px 0 0 126px !important
  position relative

.redes,
.iconos__footer
  display inline-block
  vertical-align top

.redes
  height auto
  max-width 28px

.iconos__footer
  float: right;
  margin-top: -20px;
  img
    display block
    height auto
    max-width 162px
    width 100%