@import url(http://fonts.googleapis.com/css?family=Raleway)

body
  color #9d9d9d
  font-family 'Raleway', sans-serif
  font-size 14px
  font-weight 400
  line-height 1.4
  overflow-x hidden

ul,
li
  list-style none

a
  display inline-block
  text-decoration none
  transition all 0.5s ease

h1
  font-size 12px
  font-weight 400
  margin 0
  padding-left 2.5em

.search
  width 253px

.icon-search
  font-size 12px
  outline 0
  text-align center
  background url ('img/header/iconSearch.png')
  background-size 50% 50%
  background-repeat no-repeat
  width 11px
  height 10px

.headerBlock
  overflow hidden
  position absolute
  width 100%
  z-index 2
  &__top
    background #fff
    border-bottom 1px solid #dcdcdc
    margin auto
    max-width 1170px
    padding 0.25em 0
    &--left
      display inline-block
      vertical-align middle
      width 78%
    &--right
      display inline-block
      text-align right
      vertical-align middle
  &__bottom
    height 146px
    margin auto
    max-width 1170px
    &--figure
      background #fff
      border-bottom solid 1px  rgba(41, 38, 4, 0.52)
      box-shadow 0px 2px 3px 0px rgba(41, 38, 4, 0.52)
      display inline-block
      max-width 218px
      padding 1.8em 0 0.1em
      position relative
      text-align center
      vertical-align top
      width 100%
      z-index 1
      &Figcaption
        background #e7d728
        bottom -23px
        box-shadow inset 0 1px 1px 0px rgba(41, 38, 4, 0.52), 0 2px 2px 0 rgba(41, 38, 4, 0.52)
        color #4d4706
        float left
        padding 0.2em 0
        position absolute
        text-align center
        width 218px
        z-index 2
        &:before
          background #e7d728
          border-radius 50%
          bottom -15px
          content ""
          cursor pointer
          height 36px
          left 0
          margin auto
          position absolute
          right 0
          text-align center
          width 36px
          z-index -1
        &:after
          border-color transparent transparent #000000 transparent
          border-style solid
          border-width 0 6px 8px 6px
          bottom -8px
          content ""
          cursor pointer
          height 0
          left 0
          margin auto
          position absolute
          right 0
          width 0
          z-index 3
        a
          color #4d4706

.navBlock
  background #fff
  border-bottom 1px solid #dcdcdc
  display inline-block
  margin-left -3px
  max-width 951px
  vertical-align middle
  width 100%
  &__main
    margin 0
    padding 0
    &Item
      display inline-block
      height 68px
      padding 1.5em 0.5em
      position relative
      vertical-align middle
      width 105px
      cursor pointer
      text-align center
      &:nth-child(1)
        width 162px
        padding-left 1.5em
      &:nth-child(2)
        width 170px
      &:nth-child(3)
        width 180px
      &:nth-child(4)
        width 140px
      &:nth-child(5)
        width 130px
      &:before
        background #dbcb19
        content ""
        height 3px
        left 0
        position absolute
        top 0
        transition top 0.3s
        width 100%
        opacity 0
      &:hover
        &:before
          opacity 1
          top 97%
    &--link
      text-align left
      text-transform uppercase
      font-weight bold
      color #0b2973
      line-height 14px
      font-size 12px

.slider__block
  margin auto
  max-width 1100px
  position relative
  z-index 1
  &:after
    bottom 9px
    box-shadow 0 10px 6px #000
    content ""
    height 5px
    left 0
    margin auto
    position absolute
    right 0
    width 98%
    z-index 1
  &--figure
    position relative
    &Figcaption
      background #fff
      bottom 10%
      box-shadow 0px 2px 3px 0px rgba(41, 38, 4, 0.52)
      max-width 298px
      position absolute
      right 5%
      color #00247d
      text-align center
      text-transform uppercase
      &:before
        border-color transparent #fff transparent transparent
        border-style solid
        border-width 20px 20px 20px 0
        content ""
        left -20px
        position absolute
        top 35px
        width 0
        height: 0
      &Content
        display: table-cell;
        height: 160px;
        vertical-align: middle;
        &Center
          width 80%
          margin auto
          &Small
            font-size 18px
            font-weight bold
          &Strong
            font-size 24px
            position relative
            &:after
              border-bottom solid 1px #dbcb19
              bottom -5px
              content ""
              left -20%
              position absolute
              right 0
              width 140%
          &Span
            color #222
            display block
            font-size 14px
            margin-top 12px
            text-transform none

.section__home
  background #fff
  margin -3em auto auto
  max-width 1170px
  padding-top 4em
  position relative
  z-index 0
  &:before
    right 100%
  &:after
    left 100%
.section__home:before,
.section__home:after
  background #fff
  bottom 0
  content ""
  position absolute
  top 0
  width 9999px
  &--nav
    max-width 1100px
    margin auto
  &--breacrumbs
    display inline-block
    vertical-align middle
    width 78%
    margin-left 3px
  &--redes
    display inline-block
    text-align right
    vertical-align middle
    width 21%

